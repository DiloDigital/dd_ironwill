body
	margin 0 auto
	padding 0
	font-family Abel, Anton, sans-serif
	font-size 16px
	font-size 1rem
	width 100%
	min-width b1	

.header
	padding 0.5em 3%
	position relative
	+above(b2)
		display flex
		justify-content space-between
	.logo
		align-self center
		.logotipo
			float left
			.slogan
				//width 260px
				img
					display block
			+above(b2)
				display flex
				align-content center
				img
					width 300px
		.toggle-menu
			float right
			font-size 2.3em
			text-align center
			color #143856ff
			
			position absolute
			top 0.5em
			right 3%
			+above(b2)
				display none
		
	.main-nav
		clear both
		+above(b2)
			align-self right
			display flex
			flex-direction column
			justify-content space-around
		&__cont
			display none
			+above(b2)
				display flex!important
		&__list
		&__item
			+above(b2)
				display flex
		&__link
			display block
			text-align left
			text-decoration none
			font-family Abel
			font-size 1.03em
			color #23282cff
			&:hover
				background grey_dark
				color white
			+above(b2)
				width 6em
				text-align center
				padding 0.6em
				
	.menu-social
		text-align center
		display none
		+above(b2)
			align-self flex-end
			display block
		&__list
		&__item
			+above(b2)
				display flex
		&__link
			padding 0.25em
			text-decoration none
			font-size 1.6em
			color grey
						
.banner
	+above(b2)
		background-image url("img/videotablet.jpg") 
		background-repeat no-repeat
		background-position center
		background-attachment fixed
		background-size cover
	+above(b3)
		background-image url("img/videopc.jpg")
	&__overlay
	&__cont
	&__content
		.header-banner
			line-height 1
			text-align center
			+above(b2)
				width 640px
				margin auto
			+above(1280px)
				padding-top 8vh
				width 100%
		.video-banner
			background-image url("img/videomovil.jpg")
			background-repeat no-repeat
			background-position center
			background-size 100%
			padding 1em
			+above(b2)
				background-image none
			p
				margin 0
				font-size 1em
	&__button
		margin 1.5em 0

.valores
	&__header
	&__cont
	&__item
		figure
			padding 0
			margin-bottom 3em
			//margin 3em 0
			.valores-img
				margin auto
				width 120px
			figcaption
				margin auto
				text-align center
				width 90%
				h4
					color grey
			+above(b2)
				display flex
				margin 1em 0
				figcaption
					//margin 0
					text-align left
					width 66%
			+above(b2)
				.valores-img
					margin 0
				figcaption
					margin-left 4%
					
.servicios
	&__header
		margin-bottom 2em
	&__cont
		width 100%
		margin auto
	&__item
		padding-bottom 2em
		margin auto
		+above(b2)
			width 32.9%
			display inline-block
		figure
			padding-bottom 3em
			margin auto
			+above(b1)
				padding 0 5%
				margin 0 auto
			.servicio-img
				margin auto
				width 280px
				+above(b2)
					width 100%
				img
					border-radius 50%
			figcaption
				text-align center
				a
					text-decoration none
					h3
						padding-top 0.8em
						+between(b2,b3)
							width 80%
							margin auto
	&__button
		padding 1.5em 0
		text-align center
		
.equipo
	&__header
		margin-bottom 3em
	&__cont
		width 100%
	&__item
		color white
		margin-bottom 2em
		padding 0 3em
		+above(b1)
			padding 0
		+between(b1,640px)
			width 48%
			display inline-block
			margin auto	
		+above(640px)
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content center
		figure
			margin 0
			background white
			margin-bottom 1em
			img
				padding-top 1em
			
			figcaption
				padding 1em 0
				p
					margin 0

.clientes
	&__header
		display none
		h2
			color grey
		+above(b2)
			display block
	&__cont
		display none
		+above(b2)
			display flex
		padding-bottom 2em
	&__item
		a
			display flex
			img
				margin auto
				align-self center
				width 100%
	&__button
		padding 1.5em 0
		text-align center

.footer
	.contact
		clear both
		&__header
			width 80%
			margin 2em 0
		&__subtitle1
			width 100%
			+above(b2)
				display none
		&__subtitle2
			display none
			+above(b2)
				display block
		&__form
			box-sizing border-box 
			width 100%
			padding 1em
			
		.menu-social
			&__list
			&__item
				display inline-block
			&__link
				padding 0.25em
				font-size 1.6em
				text-decoration none
				color white
		&__info
			margin-top 2em
			margin-bottom 1.5em
			p
				color yellow
				margin 0
				font-size 1.1em
				span
					color white
		
	.contact-right
		+above(b2)	
			width 60%
			float right
			margin-top 2em
			margin-bottom 4em
			text-align left
			
	.contact-left
		+above(b2)	
			width 35%
			float left
			margin-top 2em
			text-align left
		
	.credits
		clear both
		padding 1em 2em 
		&__copyright
			display inline-block
		&__author
			float right
			display inline-block
			a
				text-decoration none
				p
					color yellow
		+above(b2)
			display flex
			justify-content space-between


