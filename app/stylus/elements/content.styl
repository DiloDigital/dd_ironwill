.servicio-crecimiento,
.servicio-coaching,
.servicio-charlas,
.servicio-rse

	&__item
		+above(b2)
			display flex
			flex-direction row
			justify-content space-around
			padding-bottom 1em
		
	&__header
		width 100%
		
		+above(b2)
			width 40%
			text-align left
			margin-right 2em
		p
			color white
	
	&__img-mob
		padding 2em
		img
			display block
		+above(b2)
			display none

	&__img-tab
		padding 0
		display none
		+above(b2)
			align-self center
			display block
		+above(b3)
			display none
		
	&__img-pc
		display none
		+above(b3)
			display block

.banner-middle,			
.banner-middle-rse,
.banner-middle-charlas,
.banner-middle-coaching,
.banner-middle-crecimiento
	background-attachment fixed
	background-size cover
	background-position center
	background-repeat no-repeat
	&__overlay
		//background-color red
		//opacity 0.35
	&__cont
	&__info
		p
			font-family Abel
			font-size 2.2em
			color white
			text-align center
			+above(b1)
				font-size 2.2em
			+above(b2)
				font-size 3.125em

.banner-middle
	background-image url("img/banner-middle_mob.jpg")
	+above(b2)
		background-image url("img/banner-middle_tab.jpg")
	+above(b3)
		background-image url("img/banner-middle_pc.jpg")
			
.banner-middle-rse
	background-image url("img/rse/banner-middle_mob.jpg")
	+above(b2)
		background-image url("img/rse/banner-middle_tab.jpg")
	+above(b3)
		background-image url("img/rse/banner-middle_pc.jpg")
			
.banner-middle-charlas
	background-image url("img/charlas/banner-middle_mob.jpg")
	+above(b2)
		background-image url("img/charlas/banner-middle_tab.jpg")
	+above(b3)
		background-image url("img/charlas/banner-middle_pc.jpg")
			
.banner-middle-coaching
	background-image url("img/coaching/banner-middle_mob.jpg")
	+above(b2)
		background-image url("img/coaching/banner-middle_tab.jpg")
	+above(b3)
		background-image url("img/coaching/banner-middle_pc.jpg")
			
.banner-middle-crecimiento
	background-image url("img/crecimiento/banner-middle_mob.jpg")
	+above(b2)
		background-image url("img/crecimiento/banner-middle_tab.jpg")
