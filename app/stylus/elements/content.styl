				text-decoration none
				color white
			
			.contacto-info
				//display flex
				//flex-direction column
				p
					color white
					margin 0
					font-size 1.1em
				
					
	.footer-credits
		padding 1em 2em 
		//color white
		&__copyright
			display inline-block
		&__author
			float right
			display inline-block
			//text-align right
				
			a
				text-decoration none
				p
					color yellow
		+above(b2)
