body
	margin 0 auto
	padding 0
	
	font-family Abel, ANton, sans-serif
	font-size 16px
	font-size 1rem
	min-height 100vh
	
	//background-image: url('img/pc.jpg')
	/*background-repeat no-repeat
	background-position center center*/
	
//main
//	margin-top 7em


.header
	padding 0.5em 3%
	+above(b2)
		display flex
		justify-content space-between
	.logo
		position relative
		display  flex
		justify-content space-between
		align-items center
		.logotipo
			width 80%
			display flex
			flex-direction row
			align-items center
			
			.isotipo
				img
					width 100% 
					display block
			.slogan
				img
					width 100% 
					display block
			+above(b2)
				width 100%
		.toggle-menu
			//align-self center
			//justify-content center
			
			color #143856ff
			font-size 2em
			margin-right 2% 

			/*+above(580px)
				position absolute
				top 0.5em
				right 0*/
			+above(b2)
				display none
	
	
	.main-nav
		align-self right
		display flex
		flex-direction column
		justify-content space-around
		&__cont
			display none
			+above(b2)
				display flex!important
		&__list
			
				
		&__item
			display flex
			flex-direction column
			+above(b2)
				flex-direction row
				//justify-content space-between
				
		&__link
			padding 0 0.5em
			text-decoration none
			font-family Abel
			font-size 1.03em
			color #23282cff
			&:hover
				//background rgba(0, 0, 0, .3)
				background blue
				color white
				
	.menu-social
		text-align center
		display none
		/*+above(580px)
			position absolute
			top 4em
			right 1.5em*/

		+above(b2)
			//position static
			align-self flex-end
			display block
		&__list
		&__item
			+above(b1)
				display flex
		&__link
			padding 0.25em
			text-decoration none
			font-size 1.6em
			color grey
						

.banner
		
	&__cont
		display flex
		//margin 1em 0
		//align-items center
		flex-direction column
		+above(b3)
			flex-direction row
			align-items center
		
	&__main
		width 100%
		/*+above(b3)
			width 60%*/
		
		+above(b3)
			width 70%
		.header-banner
			line-height 1
			width 100%
			text-align center
			
			+above(b3)
				h1
					width 430px
				p
					width 90%
			h1
				margin 0
	&__form
		
		width 80%
		margin auto
		//padding 5%
		//flex-grow 3
		padding 1em
		/*+above(b3)
			width 50%*/
			
		+above(b3)
			width 380px

	

