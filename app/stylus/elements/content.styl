body
	margin 0 auto
	padding 0
	
	font-family Abel, ANton, sans-serif
	font-size 16px
	font-size 1rem
	min-height 100vh


.header
	padding 0.5em 3%
	+above(b2)
		display flex
		justify-content space-between
	.logo
		position relative
		display  flex
		justify-content space-between
		align-items center
		.logotipo
			width 75%
			display flex
			flex-direction row
			align-items center
			
			.isotipo
				img
					width 100% 
					display block
			.slogan
				img
					width 100% 
					display block
			+above(b2)
				width 80%
		.toggle-menu
			color #143856ff
			font-size 2em
			margin-right 2% 
			+above(b2)
				display none
	
	.main-nav
		align-self right
		display flex
		flex-direction column
		justify-content space-around
		&__cont
			display none
			+above(b2)
				display flex!important
		&__list
			
				
		&__item
			display flex
			flex-direction column
			
			+above(b2)
				flex-direction row
				
		&__link
			text-align left
			text-decoration none
			font-family Abel
			font-size 1.03em
			color #23282cff
			&:hover
				background grey_dark
				color white
			+above(b2)
				width 6em
				text-align center
				
	.menu-social
		text-align center
		display none
		+above(b2)
			align-self flex-end
			display block
		&__list
		&__item
			+above(b1)
				display flex
		&__link
			padding 0.25em
			text-decoration none
			font-size 1.6em
			color grey
						

.banner
	.header-banner
		line-height 1
		width 100%
		text-align center
	&__cont
		display flex
		flex-direction column
		+above(b2)
			flex-direction row
			align-items center
		
	&__main
		+above(b2)
			width 50%
		+above(b3)
			width 55%
		.video-banner
			padding 1em

	&__form
		box-sizing border-box 
		width 100%
		padding 1em
		+above(b2)
			width 50%
		+above(b3)
			width 45%

.valores
	&__header
	&__cont
		
	&__item
		
		figure
			padding 0
			margin 3em 0
			.valores-img
				margin auto
				width 120px
				
			figcaption
				margin auto
				text-align center
				width 90%
				h4
					color grey
			+above(b1)
				display flex
				margin 0
				figcaption
					margin 0
					text-align left
					width 66%
			+above(b2)
				.valores-img
					margin 0
				figcaption
					margin-left 4%
					
					
.servicios
	&__header
	&__cont
		
	&__item
		margin-bottom 1em
		figure
			+above(640px)
				margin 0
				.servicio-img
					width 100%
			
			.servicio-img
				margin auto
				margin-bottom 1em
				+above(b1)
					width 80%
				img
					border-radius 50%
					display block
			figcaption
				text-align center
				a
					text-decoration none
	&__button
		padding 1.5em 0
		text-align center
		
.banner-middle
	&__cont
		position relative
		img
			display block
	&__img-mob
		+above(640px)
			display none
	
	&__img-tab
		display none
		+above(640px)
			display block
		+above(b3)
			display none
		
	&__img-pc
		display none
		+above(b3)
			display block
		
	&__info
		position absolute
		top 50%
		left 0
		right 0
		transform translatey(-50%)
		margin auto
		
		width 60%

		p
			font-family Abel
			font-size 2.8em
			color white
			+above(b2)
				font-size 3.125em
	
.equipo
	&__header
		margin-bottom 3em
	&__cont
		padding 0 3em
		+above(b3)
			padding 0
		
	&__item
		color white
		margin-bottom 1em
		+above(b1)
			
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content center
		figure
			margin 0
			background white
			img
				padding-top 1em
			
			figcaption
				padding 1em 0
				p
					margin 0

.clientes
	&__header
		display none
		h2
			color grey
		+above(b1)
			display block

	&__cont
		display none
		+above(b1)
			display flex
		padding-bottom 2em
	&__item
		a
			display flex
			img
				margin auto
				align-self center
				width 100%


	&__button
		padding 1.5em 0
		text-align center


.footer
	.contacto
		padding 1em 0
		text-align center
		p
			color white
		+above(b1)
			display flex
			justify-content space-between
			padding 2.5em 2em
			text-align left
			.contacto-info
				display flex
				flex-direction column
				p
					color white
					margin 0
					font-size 1.1em
		.menu-social
			&__list
			&__item
				+above(b1)
					display flex
					justify-content flex-end
			&__link
				padding 0.25em
				font-size 1.5em
				text-decoration none
				color white
				
					
	.footer-credits
		padding 1em 2em 
		display flex
		justify-content space-between
		color white
		&__copyright
		&__author
			text-align center
			a
				text-decoration none
				p
					color yellow
					


