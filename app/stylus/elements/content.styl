body
	margin 0 auto
	padding 0
	
	font-family Abel, Anton, sans-serif
	font-size 16px
	font-size 1rem
	min-height 100vh


.header
	padding 0.5em 3%
	position relative
	+above(b2)
		display flex
		justify-content space-between
	
	.logotipo
		float left
		.slogan
			width 260px
			img
				display block
		+above(b2)
			.slogan
				width 300px
	.toggle-menu
		float right
		font-size 2.3em
		text-align center
		color #143856ff
		
		position absolute
		top 0.5em
		right 3%
		+above(b2)
			display none
		
	.main-nav
		clear both
		+above(b2)
			align-self right
			display flex
			flex-direction column
			justify-content space-around
		&__cont
			display none
			+above(b2)
				display flex!important
		&__list
		&__item
			+above(b2)
				display flex
		&__link
			display block
			text-align left
			text-decoration none
			font-family Abel
			font-size 1.03em
			color #23282cff
			&:hover
				background grey_dark
				color white
			+above(b2)
				width 6em
				text-align center
				
	.menu-social
		text-align center
		display none
		+above(b2)
			align-self flex-end
			display block
		&__list
		&__item
			+above(b2)
				display flex
		&__link
			padding 0.25em
			text-decoration none
			font-size 1.6em
			color grey
						

