.valores
	&__header
	&__cont
		
	&__item
		
		figure
			padding 0
			margin-bottom 3em
			//margin 3em 0
			.valores-img
				margin auto
				width 120px
				
			figcaption
				margin auto
				text-align center
				width 90%
				h4
					color grey
			+above(b2)
				display flex
				margin 1em 0
				figcaption
					//margin 0
					text-align left
					width 66%
			+above(b2)
				.valores-img
					margin 0
				figcaption
					margin-left 4%
					
					
.servicios
	&__header
		margin-bottom 2em
	&__cont
		width 100%
		margin auto
		
	&__item
		padding-bottom 2em
		margin auto
		+above(b2)
			width 32.9%
			display inline-block
		
		figure
			padding-bottom 3em
			margin auto
			
			+above(b1)
				padding 0 5%
				margin 0 auto
				
			.servicio-img
				margin auto
				width 280px
				
				+above(b2)
					width 100%
				
				img
					border-radius 50%
			figcaption
				text-align center
				a
					text-decoration none
					h3
						+between(b2,b3)
							width 80%
							margin auto
		
	&__button
		padding 1.5em 0
		text-align center
		
.banner-middle
	&__cont
		position relative
		img
			display block
	&__img-mob
		+above(640px)
			display none
	
	&__img-tab
		display none
		+above(640px)
			display block
		+above(b3)
			display none
		
	&__img-pc
		display none
		+above(b3)
			display block
		
	&__info
		position absolute
		top 50%
		left 0
		right 0
		transform translatey(-50%)
		margin auto
		
		width 60%

		p
			font-family Abel
			font-size 2.8em
			color white
			+above(b2)
				font-size 3.125em
	
.equipo
	&__header
		margin-bottom 3em
	&__cont
		width 100%
	&__item
		color white
		margin-bottom 2em
		
		padding 0 3em
		+above(b1)
			padding 0

		+between(b1,640px)
			width 48%
			display inline-block
			margin auto	
		+above(640px)
			
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content center
		figure
			margin 0
			background white
			margin-bottom 1em
			img
				padding-top 1em
			
			figcaption
				padding 1em 0
				p
					margin 0

.clientes
	&__header
		display none
		h2
			color grey
		+above(b2)
			display block

	&__cont
		display none
		+above(b2)
			display flex
		padding-bottom 2em
	&__item
		a
			display flex
			img
				margin auto
				align-self center
				width 100%


	&__button
		padding 1.5em 0
		text-align center


.footer
