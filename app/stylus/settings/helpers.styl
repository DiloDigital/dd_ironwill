//   Helper classes

.hidden
  display none !important
  visibility hidden

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.invisible
  visibility hidden

.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix
  *zoom 1
    &:after
      clear both

// responsive

.max-width
    width 100%
    max-width 1200px
    margin-left auto
    margin-right auto
    overflow hidden
    box-sizing border-box
    &--extra
      max-width 1400px

.img-responsive
    width 100%
    max-width 100%
    height auto
    

.list-none
    list-style-type none
.decoration-none
    text-decoration none

.non-margin
    margin 0
    padding 0


.wrap
  width 1200px 
  margin-left auto
  margin-right auto

// color Background

.bg
    &--white
        background-color white
    &--red
        background-color red
    &--orange
        background-color orange
    &--grey-medium
        background-color grey_medium
    &--grey-dark
        background-color grey_dark

// alineaciones

.text
    &--center
        text-align center
    &--left
        text-align left
    &--right
        text-align right

    &--black
        color black
    &--white
        color white
    &--grey-light
        color grey_light
    &--grey
        color grey
    
    &--main
        font-size 1em
    &--p2
        font-size 1em
    &--p3
        font-size 0.75em
    &--p4
        font-size 0.75em
    &--p5
        font-size 0.85em
        
        
.title
  &--main
    font-size 2em
    +above(b2)
      font-size 3.125em
      
  &--sub2
    font-size 2.5em
  &--sub3
    font-size 1.59em
  &--sub4
    font-size 1.59em
  
h1, h2, h3, h4
  font-family Anton
  color white
  //font-weight bold
  margin-top 0
  margin-bottom 0
p
  font-family abel
  color grey_light
  